{
  "manifest_version": 2,
  "name": "Keeping Tabs",
  "version": "1.2",
  "description": "Smart tab numbering and keyboard navigation for unpinned tabs",

  "browser_specific_settings": {
    "gecko": {
      "id": "{2f2997f3-d6b8-4882-8c44-4f66c8a337c0}"
    }
  },

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "permissions": [
    "tabs",
    "<all_urls>"
  ],
  
  "background": {
    "scripts": ["background.js"]
  },
  
  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "Keeping Tabs"
  },

  "commands": {
    "go-to-tab-1": {
      "suggested_key": { "default": "Ctrl+1", "mac": "Command+1" },
      "description": "Go to unpinned tab 1"
    },
